@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>You have no Sylists! Hire some!</h3>
}

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li class="hair">@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>
<p>@Html.ActionLink("Hire new Stylist", "Create")</p>
<p>@Html.ActionLink("Add new client", "Create", "Clients")</p>